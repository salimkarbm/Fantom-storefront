{
    "name": "fantom-storefront",
    "version": "1.0.0",
    "description": "Fantom is an online store api that display products available for purchase.",
    "main": "server.js",
    "scripts": {
        "start": "node ./dist/server.js",
        "lint": "eslint --ext .ts --fix.",
        "format": "npm run lint && npm run prettier",
        "prettier": "prettier --config .prettierrc --ignore-path .gitignore  --write './src/**/*.+(js|ts)'",
        "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
        "test-db": "set NODE_ENV=test db-migrate --env fantom_test up && jasmine-ts && db-migrate db:drop fantom_test",
        "tsc": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/salimkarbm/Fantom-storefront.git"
    },
    "author": "salim imuzai",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/salimkarbm/Fantom-storefront/issues"
    },
    "homepage": "https://github.com/salimkarbm/Fantom-storefront#readme",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^16.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.5.1",
        "typescript": "^4.1.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.9",
        "@types/jasmine": "^3.10.4",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^17.0.22",
        "@types/pg": "^7.14.7",
        "jasmine": "^3.6.4",
        "jasmine-spec-reporter": "^6.0.0",
        "jasmine-ts": "^0.3.0",
        "ts-node": "^9.1.1",
        "tsc-watch": "^4.2.9",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.8.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.5.1",
        "supertest": "^6.2.2",
        "@types/supertest": "^2.0.11"
    }
}
